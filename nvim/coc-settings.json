{ 
    "languageserver": { 
         "terraform": {
          "command": "terraform-lsp",
          "filetypes": ["terraform"],
          "initializationOptions": {}
        } 
    },
     "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"],
            "disableDynamicRegister":true,
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
     }
} 
