choices="vertical-on\nvertical-off\nshare-screen-1"

chosen=$(echo -e "$choices" | dmenu -i -p "Select Layout: " -sb "#7E33FF" )

case "$chosen" in
        "vertical-on")   xrandr --output DisplayPort-2 --mode 1920x1080 --right-of HDMI-A-0 --rotate left;;
        "vertical-off") xrandr --output DisplayPort-2 --off ;;
        "share-screen-1") xrandr --output HDMI-A-0 --mode 1920x1080 --left-of DisplayPort-2;;
esac

